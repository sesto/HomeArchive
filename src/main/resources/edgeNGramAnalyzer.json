{
  "settings": {
    "analysis": {
      "analyzer": {
        "homearchive_ngram_analyzer": {
          "filter": [
            "lowercase",
            "homearchive_ngram_filter"
          ],
          "tokenizer": "whitespace"
        }
      },
      "filter": {
        "homearchive_ngram_filter": {
          "type": "edgeNGram",
          "min_gram": "3",
          "max_gram": "10",
          "token_chars": [
            "letter",
            "digit",
            "whitespace",
            "punctuation"
          ]
        }
      }
    }
  }
}